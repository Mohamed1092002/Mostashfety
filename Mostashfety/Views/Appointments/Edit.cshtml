@model Mostashfety.BLL.ViewModels.AppointmentVM.EditAppointmentVM 
<div class="m-lg-5" style="margin-left: 20px ">
    <h2>Edit Appointment</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label for="DoctorName">DoctorName</label>
            <input asp-for="DoctorName" class="form-control" />
            <span asp-validation-for="DoctorName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="PatientName">PatientName</label>
            <textarea asp-for="PatientName" class="form-control"></textarea>
            <span asp-validation-for="PatientName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Status">Status</label>
            <textarea asp-for="Status" class="form-control"></textarea>
            <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        <div class="form-group">
            <label for="AppointmentDate">AppointmentDate</label>
            <textarea asp-for="AppointmentDate" class="form-control"></textarea>
            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
        </div>
         
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
