
@model IEnumerable<Mostashfety.BLL.ViewModels.DoctorVM.GetDoctorVm>
<div class="m-lg-5" style="margin-left: 20px;">
    <h2>Doctors List</h2>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>FullName</th>
                <th>Specializied</th>
                <th>Department</th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var doctor in Model)
            {
                <tr>
                    <td>@doctor.Id</td>
                    <td>@doctor.FullName</td>
                    <td>@doctor.specialization</td>
                    <td>@doctor.Department</td>
                    <td>
                        <a href="@Url.Action("Details", new { id = doctor.Id })" class="btn btn-info">Details</a>
                        <a href="@Url.Action("Edit", new { id = doctor.Id })" class="btn btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", new { id = doctor.Id })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a href="@Url.Action("Create")" class="btn btn-success">Create New Doctor</a>
</div>